<odoo>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_new' : 1,}</field>

    </record>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_property_tags_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="estate_menu_root" name="Estate"/>
    <menuitem id="estate_menu_advertisements" name="Advertisements" parent="estate_menu_root"/>
    <menuitem id="estate_menu_settings" name="Settings" parent="estate_menu_root"/>
    <menuitem id="estate_menu_ad_list"
              name="Property List" parent="estate_menu_advertisements" action="estate_model_action"/>
    <menuitem id="estate_menu_property_type"
              name="Property Type" parent="estate_menu_settings" action="estate_property_type_action"/>
    <menuitem id="estate_menu_property_offer"
              name="Property Offer" parent="estate_menu_settings" action="estate_property_offer_action"/>
    <menuitem id="estate_menu_property_tags"
              name="Property Tags" parent="estate_menu_settings" action="estate_property_tags_action"/>



    <record id="estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties"
                  decoration-success="state in ('offer_received','offer_accepted')"
                  decoration-muted="state == 'sold'"
                  decoration-bf="state == 'offer_accepted' "

            >
                <field name="property_type_id"/>
                <field name="number"/>
                <field name="name"/>
                <field name="bedrooms"/>
                <field name="expected_price"/>
                <field name="date_availability"/>
                <field name="state" optional="True"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="sold_action" type="object" string="Sold" invisible="state in ('sold','canceled')"/>
                    <button name="cancel_action" type="object" string="Cancel" invisible="state in ('sold','canceled')"/>
                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>

                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="number"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="property_type_id"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="living_area"/>
                            <field name="garden"/>
                            <field name="garden_area" invisible="not garden"/>
                            <field name="garden_orientation"
                                   widget="radio" invisible=" not garden "
                            />
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="date_availability"/>
                                    <field name="active"/>
                                    <field name="buyer_id"/>
                                    <field name="salesperson_id"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids" readonly="state in ('offer_accepted','sold','canceled')"/>
                            </page>

                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_inherit_form" model="ir.ui.view">
        <field name="name">estate.property.inherit.form</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bedrooms']" position="after">
                <field name="pets_allowed"/>
            </xpath>
        </field>
    </record>

    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="living_area"
                        string="Living Area"
                        filter_domain="[('living_area','>=',self)]"/>

                <filter name="filter_new"
                    string="New Properties"
                    domain="[('state','=','new')]"/>
                <filter name="filter_offer_recieved"
                        string="Offer Recieved"
                        domain="[('state','=','offer_received')]"/>



                <group expand="0" string="Group By">
                    <filter string="Postcode"
                            name="group_by_postcode"
                            context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>

    </record>

    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree
                    string="Offers"
                    decoration-success="status == 'accepted'"
                    decoration-danger="status == 'refused'"
                    editable="bottom">
                <field name="price"/>
                <field name="status" optional="False"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <button icon="fa-check" type="object" string="Accept" name="action_accept" invisible="status in ('accepted','refused')" />
                <button icon="oi-close" type="object" string="Reject" name="action_reject" invisible="status in ('accepted','refused')" />
                <field name="date_deadline" />
            </tree>
        </field>
    </record>

    <record id="estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>



</odoo>